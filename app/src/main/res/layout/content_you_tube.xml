<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_you_tube"
        tools:context=".YouTubeActivity" android:visibility="visible">

    <EditText
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:importantForAutofill="no"
            android:hint="@string/minutes"
            android:ems="10"
            android:id="@+id/minutes"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:text=""
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/address"/>
    <EditText
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:importantForAutofill="no"
            android:hint="@string/seconds"
            android:ems="10"
            android:id="@+id/seconds"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:text="" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/address"/>
    <EditText
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:importantForAutofill="no"
            android:hint="@string/youtube_video_address"
            android:ems="10"
            android:id="@+id/address"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.888" android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/minutes"
            android:layout_width="190dp"
            android:layout_height="41dp"
            android:id="@+id/textView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/minutes"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="@string/seconds"
            android:layout_width="190dp"
            android:layout_height="41dp"
            android:id="@+id/textView3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/seconds"/>
    <Button
            android:text="@string/launch_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLaunch" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/save_to_button"
            android:layout_width="190dp"
            android:layout_height="41dp"
            android:id="@+id/buttonSaveToButton" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
    />
    <EditText
            android:layout_width="190dp"
            android:layout_height="41dp"
            android:importantForAutofill="no"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextButtonIndex" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:hint="@string/button_index"
            app:layout_constraintStart_toEndOf="@+id/buttonSaveToButton" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>